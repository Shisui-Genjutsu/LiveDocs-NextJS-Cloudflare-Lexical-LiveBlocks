{
	"name": "live-docs",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack -p 3000",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"prebuild:cloudflare": "rm -rf .open-next .next && cp instrumentation.ts instrumentation.ts.original 2>/dev/null || true && cp instrumentation.cloudflare.ts instrumentation.ts",
		"postbuild:cloudflare": "if [ -f instrumentation.ts.original ]; then mv instrumentation.ts.original instrumentation.ts; fi",
		"build:cloudflare": "npm run prebuild:cloudflare && NEXT_SKIP_TYPE_CHECK=true DISABLE_SENTRY=true NEXT_PUBLIC_DISABLE_SENTRY=true npx opennextjs-cloudflare build && npm run postbuild:cloudflare",
		"deploy": "npm run build:cloudflare && opennextjs-cloudflare deploy",
		"preview": "npm run build:cloudflare && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts"
	},
	"dependencies": {
		"@clerk/nextjs": "^6.27.1",
		"@clerk/themes": "^2.4.2",
		"@floating-ui/react-dom": "^2.1.4",
		"@lexical/react": "^0.24.0",
		"@lexical/rich-text": "^0.24.0",
		"@lexical/selection": "0.24.0",
		"@lexical/utils": "0.24.0",
		"@liveblocks/client": "^3.2.1",
		"@liveblocks/node": "^3.2.1",
		"@liveblocks/react": "^3.2.1",
		"@liveblocks/react-lexical": "^3.2.1",
		"@liveblocks/react-ui": "^3.2.1",
		"@opennextjs/cloudflare": "^1.6.1",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-popover": "^1.1.14",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"@sentry/nextjs": "^9.42.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"import-in-the-middle": "^1.14.2",
		"lexical": "^0.24.0",
		"lucide-react": "^0.525.0",
		"nanoid": "^5.1.5",
		"next": "15.3.5",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"require-in-the-middle": "^7.5.2",
		"tailwind-merge": "^3.3.1",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20.19.9",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^9",
		"eslint-config-next": "15.3.5",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.3.6",
		"typescript": "^5",
		"wrangler": "^4.26.0"
	}
}